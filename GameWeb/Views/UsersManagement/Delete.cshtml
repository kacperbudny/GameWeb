@model GameWeb.Models.ApplicationUser

<form method="post" asp-action="DeleteUser" enctype="multipart/form-data">
    <input asp-for="Id" hidden/>
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <div>
                    <label asp-for="UserName"></label>
                </div>
                <div>
                    <input asp-for="UserName" disabled/>
                </div>
            </div>
            <div>
                <div>
                    <label asp-for="Email"></label>
                </div>
                <div>
                    <input asp-for="Email" disabled/>
                </div>
            </div>
            <div>
                <div>
                    <label asp-for="Password"></label>
                </div>
                <div>
                    <input asp-for="Password" disabled/>
                </div>
            </div>
        </div>
        <div>
            <input type="submit" value="Delete" />
            <a asp-action="Index">Anuluj</a>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}