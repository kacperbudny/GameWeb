@model GameWeb.Models.ApplicationUser

<form method="post" asp-action="DeleteUser" enctype="multipart/form-data">
    <input asp-for="Id" hidden/>
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <p>Czy na pewno chcesz usunąć użytkownika <strong>@Model.UserName</strong>?</p>
        <div>
            <input type="submit" value="Usuń" />
            <a asp-action="Index">Anuluj</a>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}