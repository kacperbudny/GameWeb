<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Blinker:wght@200;400&family=Montserrat&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4bcc385cef.js" crossorigin="anonymous"></script>
</head>
<body>
    <div id="menu-overlay"></div>
    <header>
        <nav>
            <div class="header-left">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo-45px.png" alt="Site logo" />GameWeb</a>
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                    </li>
                    <li>
                        <a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Game" ? "active" : "")" asp-area="" asp-controller="Game" asp-action="Index">Gry</a>
                    </li>
                </ul>
            </div>
            <div class="header-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown-container">
                        <div class="user-hello"><i class="fas fa-angle-down"></i> Witaj, @User.Identity.Name! <i class="fas fa-user-circle user-icon"></i></div>
                        <div class="dropdown-content">
                            <ul class="dropdown-menu-flex">
                                <li>
                                    <a asp-controller="Account" asp-action="Manage"><i class="fas fa-cog"></i> Zarządzaj kontem</a>
                                </li>
                                <li>
                                    <a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Wyloguj</a>
                                </li>
                            </ul>
                        </div>
                    </div>}
                else
                {
                    <ul>
                        <li>
                            <a asp-controller="Account" asp-action="Login">Logowanie</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Register">Rejestracja</a>
                        </li>
                    </ul>}
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="text-center small">
            &copy; 2021 GameWeb
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dropdown-menu.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>