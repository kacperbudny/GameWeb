@model RegistrationViewModel
@{
    ViewBag.Title = "Rejestracja";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="validation-error-span"></div>
    <div class="upper-row">
        <h2>Rejestracja</h2>
    </div>
    <div class="form-input-set">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="text-input" />
        <span asp-validation-for="UserName" class="validation-error-span"></span>
    </div>
    <div class="form-input-set">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="text-input" />
        <span asp-validation-for="Email" class="validation-error-span"></span>
    </div>
    <div class="form-input-set">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="text-input" />
        <span asp-validation-for="Password" class="validation-error-span"></span>
    </div>
    <div class="form-input-set">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="text-input" />
        <span asp-validation-for="ConfirmPassword" class="validation-error-span"></span>
    </div>
    <div class="form-buttons-row">
        <button type="submit" class="action-button add-button">Zarejestruj</button>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}